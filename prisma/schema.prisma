generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      String   @default("cliente")
  pedidos   Pedido[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Liga {
  id     Int       @id @default(autoincrement())
  nome   String    @unique
  sigla  String    @unique
  pais   String
  ativo  Boolean   @default(true)
  times  Time[]
  produtos Produto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ativo])
}

model Time {
  id       Int       @id @default(autoincrement())
  nome     String
  cidade   String?
  ligaId   Int
  liga     Liga      @relation(fields: [ligaId], references: [id])
  ativo    Boolean   @default(true)
  produtos Produto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([nome, ligaId])
  @@index([ligaId])
  @@index([ativo])
}

model Produto {
  id          Int          @id @default(autoincrement())
  nome        String       // Nome do produto (ex: "Jersey Lakers #24 Kobe Bryant")
  tamanho     String?      // P, M, G, GG, XGG
  preco       Int          // Preço em centavos
  codigo      Int          @unique
  descricao   String?      
  sale        Boolean      @default(false)
  serie       String?      // Edição especial, retro, etc
  categoria   String       @default("JERSEY") // JERSEY, REGATA, CAMISA, CAMISA_MANGA_LONGA
  ligaId      Int
  timeId      Int
  liga        Liga         @relation(fields: [ligaId], references: [id])
  time        Time         @relation(fields: [timeId], references: [id])
  itens       ItemPedido[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([categoria])
  @@index([codigo])
  @@index([ligaId])
  @@index([timeId])
  @@index([sale])
}

model Pedido {
  id        Int          @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario      @relation(fields: [usuarioId], references: [id])
  status    String       @default("pendente") // pendente, pago, enviado, entregue, cancelado
  total     Float        @default(0)
  itens     ItemPedido[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ItemPedido {
  id         Int      @id @default(autoincrement())
  pedidoId   Int
  produtoId  Int
  quantidade Int
  precoUnit  Float    // Preço no momento da compra
  subtotal   Float    // quantidade * precoUnit
  tamanho    String   // Tamanho escolhido
  pedido     Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  produto    Produto  @relation(fields: [produtoId], references: [id], onDelete: Restrict)
  createdAt  DateTime @default(now())

  @@index([pedidoId])
  @@index([produtoId])
}
