// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Liga {
  id        Int       @id @default(autoincrement())
  nome      String
  sigla     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relacionamentos
  times     Time[]
  produtos  Produto[]

  @@map("ligas")
}

model Time {
  id        Int       @id @default(autoincrement())
  nome      String
  sigla     String?
  cidade    String?
  ligaId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relacionamentos
  liga      Liga      @relation(fields: [ligaId], references: [id])
  produtos  Produto[]

  @@map("times")
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  codigo      String   @unique
  descricao   String?  @db.Text
  preco       Float
  tamanho     String?
  cor         String?
  sport       String?
  year        Int?
  serie       String?
  estoque     Int      @default(0)
  ativo       Boolean  @default(true)
  sale        Boolean  @default(false)
  imagemUrl   String?  @db.Text
  ligaId      Int
  timeId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relacionamentos
  liga        Liga     @relation(fields: [ligaId], references: [id])
  time        Time?    @relation(fields: [timeId], references: [id])
  itensPedido ItemPedido[]

  @@map("produtos")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  telefone  String?
  endereco  String?   @db.Text
  role      String    @default("user") // user, admin
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relacionamentos
  pedidos   Pedido[]

  @@map("usuarios")
}

model Pedido {
  id        Int         @id @default(autoincrement())
  usuarioId Int
  total     Float
  status    String      @default("pendente") // pendente, processando, enviado, entregue, cancelado
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  // Relacionamentos
  usuario   Usuario     @relation(fields: [usuarioId], references: [id])
  itens     ItemPedido[]

  @@map("pedidos")
}

model ItemPedido {
  id        Int      @id @default(autoincrement())
  pedidoId  Int
  produtoId Int
  quantidade Int
  preco     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relacionamentos
  pedido    Pedido   @relation(fields: [pedidoId], references: [id])
  produto   Produto  @relation(fields: [produtoId], references: [id])

  @@map("itens_pedido")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      String   @default("cliente")
  pedidos   Pedido[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Liga {
  id     Int       @id @default(autoincrement())
  nome   String    @unique
  sigla  String    @unique
  pais   String
  ativo  Boolean   @default(true)
  times  Time[]
  produtos Produto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ativo])
}

model Time {
  id       Int       @id @default(autoincrement())
  nome     String
  cidade   String?
  ligaId   Int
  liga     Liga      @relation(fields: [ligaId], references: [id])
  ativo    Boolean   @default(true)
  produtos Produto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([nome, ligaId])
  @@index([ligaId])
  @@index([ativo])
}

model Produto {
  id          Int          @id @default(autoincrement())
  nome        String       // Nome do produto (ex: "Jersey Lakers #24 Kobe Bryant")
  codigo      String       @unique  // Código único do produto
  tamanho     String?      // P, M, G, GG, XGG
  preco       Float        // Preço do produto
  descricao   String?      
  categoria   String       @default("JERSEY") // JERSEY, REGATA, CAMISA, CAMISA_MANGA_LONGA
  cor         String?      // Cor do produto
  sport       String?      // Esporte (Basquete, Futebol, etc)
  year        Int?         // Ano da temporada
  serie       String?      // Edição especial, retro, etc
  estoque     Int          @default(0)
  ativo       Boolean      @default(true)
  sale        Boolean      @default(false)
  imagemUrl   String?      // URL da imagem do produto
  liga        String?      // Nome da liga (para compatibilidade)
  ligue       String?      // Sigla da liga (para compatibilidade)  
  time        String?      // Nome do time (para compatibilidade)
  ligaId      Int
  timeId      Int
  ligaObj     Liga         @relation(fields: [ligaId], references: [id])
  timeObj     Time         @relation(fields: [timeId], references: [id])
  itens       ItemPedido[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([categoria])
  @@index([codigo])
  @@index([ligaId])
  @@index([timeId])
  @@index([sale])
  @@index([ativo])
}

model Pedido {
  id        Int          @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario      @relation(fields: [usuarioId], references: [id])
  status    String       @default("pendente") // pendente, pago, enviado, entregue, cancelado
  total     Float        @default(0)
  itens     ItemPedido[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ItemPedido {
  id         Int      @id @default(autoincrement())
  pedidoId   Int
  produtoId  Int
  quantidade Int
  precoUnit  Float    // Preço no momento da compra
  subtotal   Float    // quantidade * precoUnit
  tamanho    String   // Tamanho escolhido
  pedido     Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  produto    Produto  @relation(fields: [produtoId], references: [id], onDelete: Restrict)
  createdAt  DateTime @default(now())

  @@index([pedidoId])
  @@index([produtoId])
}
